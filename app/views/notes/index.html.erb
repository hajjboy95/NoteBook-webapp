<h1>Index Path</h1>


<div class="wrapper_with_padding">
  <div id="notes" class="clearfix">

    <% unless @notes.blank?  %>

        <% @notes.each do |note|%>
            <a href= <%= note_path(note) %> >
              <div class="note">
                <h2 class="title"><%= note.title %></h2>
                <p class="date"><%= time_ago_in_words(note.created_at) %></p>
              </div>
            </a>



  <%end %>


    <% else  %>
        <h2>Add a Note</h2>
        <p>It appears yuo havent created any notes yet , lets fix that</p>
        <button><%= link_to "New Note" , new_note_path %></button>

    <% end  %>





  </div>



  <%= link_to "New Note" , new_note_path %>

</div>
